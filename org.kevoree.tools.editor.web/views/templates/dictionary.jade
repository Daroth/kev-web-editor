div.row-fluid
  div.row-fluid
    div.span4 Instance name
    input#instance-attr-name.span8(type='text', placeholder='Name', value=name)
  //- append unescaped attrsHTML content
  != attrsHTML

if nodes.length > 0
  div.row-fluid
    div.well
      ul.nav.nav-tabs
        each node, i in nodes
          li(class=(i==0)?'active':null)
            a(href='#node-props-'+node.name, data-toggle='tab') #{node.name}

      div.tab-content
        each node, i in nodes
          div.tab-pane(class=(i==0)?'active':null, id='node-props-'+node.name)
            //- append unescaped fragDepAttrsHTML content
            != node.fragDepAttrsHTML
