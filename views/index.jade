extends layout

block content
  div.container-fluid.fill
    div.row-fluid.fill
      div#libTree.span2
        div.well.sidebar-nav
          ul.nav.nav-list
            li.nav-header.cursor-pointer
              i.icon-arrow-right.icon-white
              | Android
            li.lib-item(data-entity='group') BasicGroup
            li.lib-item(data-entity='node') JavaSENode
            li.lib-item(data-entity='channel') BasicChannel
            li.lib-item(data-entity='component') FakeConsole

          ul.nav.nav-list
            li.nav-header.cursor-pointer
              i.icon-arrow-right.icon-white &nbsp;
              | JavaSE
            li.lib-item(data-entity='channel') WebSocketChannel
            li.lib-item(data-entity='group') WebSocketGroupMasterServer
            li.lib-item(data-entity='group') WebSocketGroup
            li.lib-item(data-entity='node') JavaSENode
            li.lib-item(data-entity='node') NodeJSNode
            li.lib-item(data-entity='component') FakeConsole

      div.span10.layer.fill
        //- ===============
        //- ALERT ERROR
        div#alert.alert.alert-error.alert-block.fade.over-right
          button.close(href="#", type='button') &times;
          h4 Error
          p#alert-content
        //- ===============

        div#editor.under

  div#popup.modal.hide.fade(tabindex='-1', role='dialog')
    div.modal-header
      button.close(type='button', data-dismiss='modal') &times;
      h3 Properties
    div.modal-body
      div#popup-content
    div.modal-footer
      button.btn(data-dismiss='modal', aria-hidden='true') Close
      button#save.btn.btn-primary(data-dismiss='modal') Save changes
      button#delete.btn.btn-danger(data-dismiss='modal') Delete

