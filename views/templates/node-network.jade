div.row-fluid
  div.span4 Reachable from
  select#initby-nodes(multiple='multiple')
    each node in initBy
      option.initby-node(value=node.name, selected=(node.selected)?'selected':null) #{node.name}

  div#node-links-container.well
    ul#node-links-tabs.nav.nav-tabs
      li.pull-right
        div.btn-group
          button#node-link-delete.btn.btn-danger.disabled
            i.icon-trash.icon-white
          button#node-link-add.btn.btn-info
            i.icon-plus.icon-white
      each link in nodeLinks
        li(id='node-link-root-'+link.id, class=(link.isActive)?'active':null, data-node-link-id=link.id)
          a(id='node-link-tab-val-'+link.id, href='#node-link-'+link.id, data-toggle='tab') #{link.type}

    div#node-links-content.tab-content
      each link in nodeLinks
        div.tab-pane(id='node-link-'+link.id, class=(link.isActive)?'active':null, data-node-link-id=link.id)
          div.row-fluid
            div.input-prepend.span4
              span.add-on.add-on-gray Type
              input.input-medium(id='node-link-type-'+link.id, type='text', placeholder='LAN, Wifi...', value=link.type)
            div.input-prepend.offset4.span3
              span.add-on.add-on-gray Rate
              input.input-small(id='node-link-rate-'+link.id, type='number', min=link.minRate, max=link.maxRate, placeholder='Trust 0~100', value=link.rate)
          div.row-fluid
            div#network-properties-container.well
              h5
                span.span4 Network properties
                div.btn-group.span2.offset6
                  button.btn.btn-danger.btn-mini.disabled(id='network-property-delete-'+link.id)
                    i.icon-trash.icon-white
                  button.btn.btn-info.btn-mini(id='network-property-add-'+link.id)
                    i.icon-plus.icon-white
              each prop in link.props
                div.row-fluid(id='network-property-list-'+link.id)
                  div.row-fluid.network-property-row
                    div.row-fluid
                      div.control-group.span3
                        input(id='network-property-key-'+link.id+'-'+prop.id, type='text', placeholder='IP', value=prop.key)
                      div.control-group.span7.offset2
                        input(id='network-property-val-'+link.id+'-'+prop.id, type='text', placeholder='192.168.0.1', value=prop.value)
                    div.row-fluid.hide(id='network-property-err-'+link.id+'-'+prop.id)
                      small.text-error

  div.row-fluid
    button#node-push-action.btn.btn-inverse.span4(type='button') Push
    div.span4
      select#node-group-action.row-fluid
        each group in groups
          option(value=group) #{group}
    button#node-pull-action.btn.btn-inverse.span4(type='button') Pull

  div#node-progress-bar.progress.progress-info.progress-stripped.active.row-fluid.hide
    div.bar
