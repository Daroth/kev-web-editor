div.row-fluid
  div.well
    ul.nav.nav-tabs
      each node, i in nodes
        li(class=(i==0)?'active':null)
          a(href='#node-props-'+node.name, data-toggle='tab') #{node.name}

    div.tab-content
      each node, i in nodes
        div.tab-pane(class=(i==0)?'active':null, id='node-props-'+node.name)
          each att in node.attrs
            div.row-fluid
              div.span4 #{att.name}
              input.span8(id='fragment-dependant-prop-'+node.name+'-'+att.name, type='text', value=att.value)